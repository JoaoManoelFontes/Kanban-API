

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id
  email     String   @unique
  password  String   @unique
  name      String
  tasks     Task[]
}

model Task {
  id            String  @id
  title         String
  markAsMaking  Boolean @default(false)
  markAsDone    Boolean @default(false)
  user          User    @relation(fields: [userId], references: [id])
  userId        String
}
