    "main": "index.js",
    "scripts": {
        "start": "tsx src/server.ts",
        "start:dev": "tsx watch src/server.ts",
        "build": "tsup src",
        "docker:init-db": "docker compose up -d db",
        "test:unit": "vitest run -c vitest.config.ts --dir src/app/use-cases",
        "test:unit:watch": "vitest -c vitest.config.ts --dir src/app/use-cases",
        "test:unit:coverage": "vitest run -c vitest.config.ts --dir src/app/use-cases --coverage",
        "test:unit:coverage:watch": "vitest -c vitest.config.ts --dir src/app/use-cases --coverage",
        "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
        "test:e2e": "vitest run -c vitest.e2e.config.ts --dir src/http/tests",
        "test:e2e:watch": "vitest -c vitest.e2e.config.ts --dir src/http/tests",
        "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
        "test:install-prisma-environment": "npm link vitest-environment-prisma"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
